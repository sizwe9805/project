        .footer-links h3 { margin-bottom: 20px; font-size: 1.2rem; }
        .footer-links ul li { margin-bottom: 10px; }
        .footer-links a { color: #CBD5E0; transition: var(--transition); }
        .footer-links a:hover { color: white; }
        .social-links {
